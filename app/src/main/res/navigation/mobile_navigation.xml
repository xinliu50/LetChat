<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.letchat.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_fragment" />

    <fragment
        android:id="@+id/navigation_addFriend"
        android:name="com.example.letchat.ui.add.AddFragment"
        android:label="Add"
        tools:layout="@layout/add_fragment" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.letchat.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/chat_fragment" />
    <fragment
        android:id="@+id/navigation_friend"
        android:name="com.example.letchat.ui.friend.FriendFragment"
        android:label="Friends"
        tools:layout="@layout/friend_fragment" />
</navigation>